/* pages/claims/claims.wxss */
.banner {
  background-repeat:no-repeat; 
  background-size: cover; 
  background-position: center;
  padding: 50rpx 20rpx;
  background-attachment: fixed;
}

.h1 {
  margin-left: 10px;
  margin-bottom: 20px;
  color: black;
  text-shadow: 1rpx 1rpx 3rpx rgba(0,0,0,0.2);
  font-size: 60rpx;
  font-weight: bold;

}
.h2 {
  margin-top: 5px;
  margin-left: 10px;
  margin-bottom: 10px;
  color: black;
  font-size: 40rpx;
  font-weight: bold;
}
.card-coupon {
  overflow: hidden;
  height: auto;
  background:#E7DEC8;
  box-shadow: 0 0 15px rgba(0,0,0,0.2);
  display: flex;
  align-items: center;
  border-radius: 10px;
  padding: 5px;
  padding-bottom: 10px;
  margin-left: 7px;
  margin-right: 7px;
  margin-bottom: 15px;
}

.p {
  font-size: 12px;
  line-height: 1.4;
  opacity: .7;
  margin-bottom: 0;
  margin-top: 5px;
  margin-left: 10px;
}

.card-coupon .card-coupon-infos {
  padding: 0;
  margin: 0;
  display: flex;
  justify-content: space-between;
  align-items: center;
}
.card-coupon .card-coupon-infos .large-words {
  margin-right: 3px;
}

.expiry {
  height: 20px;
  width: 60px;
  background-color: #7E8A97;
  border-radius: 20px;
  text-align: center;
  padding: 2px;
  margin-left: 10px;
  font-weight: bold;
  color: white;
}

.deal {
  width: 170rpx;
  margin-top: 5px;
  margin-left: 10px;
  margin-bottom: 10px;
  margin-right: 10px;
  color: black;
  font-size: 40rpx;
  font-weight: bold;
  overflow: hidden;
}

