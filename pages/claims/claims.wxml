<!--pages/claims/claims.wxml-->
<view class="banner" style="background-image: linear-gradient(rgba(0,0,0,0),rgba(0,0,0,0)), url(https://www.pngitem.com/pimgs/m/4-46933_the-coffee-bean-tea-leaf-espresso-cafe-dolce.png);">

<!-- <text>pages/claims/claims.wxml</text> -->
<view class="h1">Coupons Claimed</view>
<!-- list of saved coupons in my claims -->
<view wx:key='index' wx:for="{{claims}}" wx:for-item="claim">
  <view class="card-coupon">
    <view class="card-coupon-infos">
      <view class="large-words">
        <view class="deal">{{claim.name}} BOGO</view>
      </view>
      <view class="details">
        <view class="h2">Special deal on {{claim.offer}}</view>
        <view class="p">@ {{claim.shop_name}} Cafe</view>
        <view class="p">Expires on: {{claim.validity}}</view>
        <view class="expiry p">Valid</view>
      </view>
    </view>
  </view>
</view>

<!-- hard coded details -->




</view>