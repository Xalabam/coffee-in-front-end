/* pages/list/list.wxss */
page {
background-color: #F7F7F7;
}

.body {
margin: 0 auto;
max-width: 660rpx;
}

.searchbar {
  color: #555;
  margin-bottom: 40rpx;
  padding: 10px;
  width: 340px;
  height: 20px;
  text-align: left;
  font-weight: lighter;
  border-radius: 5px;
  background-color: #E7DEC8;
}

.h1 {
  margin-bottom: 40rpx;
  color: #333;
  text-shadow: 1rpx 1rpx 3rpx rgba(0,0,0,0.2);
  font-size: 60rpx;
  font-weight: bold;
}
.h2 {
  color: #333;
  font-size: 45rpx;
  font-weight: bold;
  margin-bottom: 40rpx;
}
.h3 {
  margin-top: 3px;
  margin-left: 10px;
  color: #333;
  font-size: 35rpx;
  font-weight: bold;
}
.p {
  margin-top: 3px;
  margin-left: 10px;
  margin-bottom: 10px;
  color: #333;
  font-size: 25rpx;
}
/*
#E7DEC8;
rgba(255, 251, 241, 0.619) - old background;
nice orange - #F7B05B*/

#shop_name {
  font-weight: 500;
}
.card-coupon {
  overflow: hidden;
  background:rgba(231,222,200,0.6);
  box-shadow: 0 0 10rpx rgba(0,0,0,0.5);
  border-radius: 8px;
  margin: 50rpx 20rpx;
}


.card-coupon .card-coupon-infos {
  padding: 0px;
  /* display: flex; */
  /* justify-content: space-between; */
  align-items: flex-end;
  position: relative;
}

.coupon-details {
  display: flex;
  justify-content: space-between;
  align-items: flex-start;
  position: relative;
  padding: 20rpx;
}

image {
  height: 100px;
  width: 100%;
  object-fit: cover;
  box-shadow: 0 0 5rpx rgba(0,0,0,0.5);
  border-radius: 1px;
}