/* pages/list/list.wxss */
.searchbar {
  margin-left: 10px;
  margin-right: 10px;
  padding: 10px;
  width: 340px;
  height: 20px;
  text-align: left;
  font-weight: lighter;
  border-radius: 5px;
  background-color: #E7DEC8;
}
.h1 {
  margin-left: 10px;
  margin-bottom: 10px;
  color: black;
  text-shadow: 1rpx 1rpx 3rpx rgba(0,0,0,0.2);
  font-size: 60rpx;
  font-weight: bold;
}
.h2 {
  margin-top: 10px;
  margin-left: 10px;
  margin-bottom: 10px;
  color: black;
  font-size: 45rpx;
  font-weight: bold;
}
.h3 {
  margin-top: 3px;
  margin-left: 10px;
  color: black;
  font-size: 35rpx;
  font-weight: bold;
}
.p {
  margin-top: 3px;
  margin-left: 10px;
  margin-bottom: 10px;
  color: black;
  font-size: 25rpx;
}

.card-coupon {
  overflow: hidden;
  background: white;
  box-shadow: 0 0 10px rgba(0,0,0,0.5);
  border-radius: 10px;
  margin: 5px;
  padding: 5px 5px;
}

