<!--pages/show/show.wxml-->

<image class='banner' src="http://www.sprinklesomesugar.com/wp-content/uploads/2017/01/IMG_5980.jpg"></image>


<!-- <view>{{coupon}}</view> -->
<view class="body">
  <view class ="h1">Deal for {{name}} Coffee</view>
  <view class ="h2">@{{shop_name}} Cafe</view>
  <view class ="p">📍{{address}}</view>
  <view class ="coupon-details-container">
    <view class='p'>Details of offer: {{offer}} - so cheap!</view>
    <view class='p validity'>Valid Until:{{validity}}</view>
  </view>

  <view class ="cafe-info-container">
    <view class='p'>Cafe information: </view>
    <view class='p'>- Sockets available</view>
    <view class='p'>- Washroom available</view>
  </view>
</view>

<button bindtap="claimThisCoupon" class='button-claim-coupon' data-id="{{id}}">Claim this coupon!</button>
<button bindtap="backToHome" class='button-backtohome'>Back to all coupons</button>
 
